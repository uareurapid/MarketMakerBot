#If network  is polygon will execute trade on quickswap, otherwise on uniswap
#we need to set the INPUT_TOKENS according to the liquidity pools created and the given pairs
#for instance on QuickSwap the Pool pair is GGTK <-> WETH
#on Uniswap the pool pair is GGTK <-> ETH/WETH

#Uniswap Wrapped/native tokens
UNISWAP_INPUT_TOKEN_SYMBOL=WETH
UNISWAP_INPUT_TOKEN_ADDRESS=0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2
#ropsten WETH: 0xc778417E063141139Fce010982780140Aa0cD5Ab
#mainnet WETH: 0xC02aaA39b223FE8D0A0e5C4F27eAD9083C756Cc2

UNISWAP_OUTPUT_TOKEN_SYMBOL = GGTK
UNISWAP_OUTPUT_TOKEN_ADDRESS = 0xfa99a87b14b02e2240c79240c5a20f945ca5ef76
#mainnet GGTK: 0xfa99a87b14b02e2240c79240c5a20f945ca5ef76
UNISWAP_ROUTER_ADDRESS = 0x7a250d5630B4cF539739dF2C5dAcb4c659F2488D


